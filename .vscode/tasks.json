{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "npm",
		"script": "compile",
		"problemMatcher": "$tsc",
		"presentation": {
		  "reveal": "always"
		},
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  },
	  {
		"label": "compileScreenRegionSelector",
		"type": "npm",
		"script": "build-screen-section-selector",
		"problemMatcher": "$tsc",
		"presentation": {
		  "reveal": "always"
		},
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  },
	  {
		"label": "copyBinaries",
		"type": "shell",
		"command": "mkdir -p ./dist && cp -r -f ./node_modules/@arcsine/win-info/bin ./dist && cp -r -f ./src/screen-region-selector/src-tauri/target/release ./dist/bin/screen-region-selector && cp -r -f ./bin/* ./dist/bin",
		"windows": {
		  "options": {
			"shell": {
			  "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
			  "args": ["-c"]
			}
		  }
		},
		"osx": {
		  "command": "mkdir -p ./dist && cp -r -f ./node_modules/@arcsine/win-info/bin ./dist && cp -r -f ./src/screen-region-selector/src-tauri/target/release ./dist/bin/screen-region-selector && cp -r -f ./bin/* ./dist/bin"
		},
		"problemMatcher": [],
		"dependsOn": ["compileScreenRegionSelector"]
	  },
	  {
		"type": "npm",
		"script": "test",
		"problemMatcher": "$tsc",
		"presentation": {
		  "reveal": "always"
		},
		"group": "build"
	  },
	  {
		"label": "tasks: run-tests",
		"dependsOn": ["npm: build", "npm: test"],
		"problemMatcher": []
	  },
	  {
		"label": "build",
		"dependsOn": ["copyBinaries", "npm: compile"],
		"problemMatcher": []
	  }
	]
  }
  